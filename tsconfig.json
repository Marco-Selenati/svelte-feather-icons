{
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "dist/*"
    ],
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "declaration": true,
        "declarationDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "types": [
            "svelte"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    }
}